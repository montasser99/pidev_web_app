{% include 'frontend/demande/index.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
    <h1>Demande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomc</th>
                <th>Moyen</th>
                <th>Date Départ</th>
                <th>Date Arrivée</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.nomc }}</td>
                <td>{{ demande.moyen }}</td>
                <td>{{ demande.dated }}</td>
                <td>{{ demande.datea }}</td>
                <td>
                    
                     <a href="{{ path('app_demande_show', {'id': demande.id}) }}" class="btn btn-info text-white active">show</a>
                    <a href="{{ path('app_demande_edit', {'id': demande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_demande_new') }}">Create new</a>
{% endblock %}
