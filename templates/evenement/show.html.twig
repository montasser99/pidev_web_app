{% extends 'base-back.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block contenu %}
    <h1>Evenement</h1>
<a href="{{ path('app_evenement_index') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
    <table class="table">
        <tbody>
            <tr>
                <th>IdEve</th>
                <td>{{ evenement.idEve }}</td>
            </tr>
            <tr>
                <th>TitreEve</th>
                <td>{{ evenement.titreEve }}</td>
            </tr>
            <tr>
                <th>DescEve</th>
                <td>{{ evenement.descEve }}</td>
            </tr>
            <tr>
                <th>DateDebEve</th>
                <td>{{ evenement.dateDebEve ? evenement.dateDebEve|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFinEve</th>
                <td>{{ evenement.dateFinEve ? evenement.dateFinEve|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>


 <form method="post" action="{{ path('app_evenement_delete', {'idEve': evenement.idEve}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.idEve) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>


    
{% endblock %}
